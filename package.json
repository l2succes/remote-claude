{
  "name": "remote-claude",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "infrastructure/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "cli": "bun run --filter @remote-claude/cli",
    "api": "bun run --filter @remote-claude/api",
    "web": "bun run --filter @remote-claude/web"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.1.0"
}