# Development Dockerfile for Remote Claude Agent
#
# This container supports hot-reloading during development

FROM node:20-slim

WORKDIR /app

# Install build dependencies and utilities
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    git \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -s /bin/bash claude && \
    mkdir -p /workspace && \
    chown -R claude:claude /app /workspace

# Copy workspace configuration
COPY package.json bun.lock* turbo.json ./
COPY packages/shared/package.json ./packages/shared/
COPY services/agent-server/package.json ./services/agent-server/

# Install dependencies including dev dependencies
RUN npm install

# Copy source code
COPY packages/shared/ ./packages/shared/
COPY services/agent-server/ ./services/agent-server/
COPY tsconfig.json ./

# Environment variables
ENV NODE_ENV=development
ENV PORT=8080
ENV HOST=0.0.0.0
ENV WORKING_DIR=/workspace
ENV LOG_LEVEL=debug

# Expose WebSocket port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Switch to non-root user
USER claude

# Start with ts-node for hot reloading
CMD ["npx", "ts-node", "--esm", "services/agent-server/src/index.ts"]
