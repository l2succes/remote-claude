# Remote Claude Environment Configuration
# Copy this file to .env and fill in your values

# Claude API Configuration
# Option 1: Use AWS Bedrock (recommended)
CLAUDE_CODE_USE_BEDROCK=1
AWS_REGION=us-east-1
AWS_BEARER_TOKEN_BEDROCK=your-bedrock-token
ANTHROPIC_SMALL_FAST_MODEL=us.anthropic.claude-haiku-4-5-20251001-v1:0
ANTHROPIC_DEFAULT_HAIKU_MODEL=us.anthropic.claude-haiku-4-5-20251001-v1:0

# Option 2: Direct Anthropic API (alternative to Bedrock)
ANTHROPIC_API_KEY=sk-ant-...

# Supabase Configuration (for database and authentication)
# Run `supabase start` to get these values for local development
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Supabase public env vars (for Next.js client-side - same as above)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# GitHub OAuth App Configuration (for web UI authentication)
# Create at: https://github.com/settings/applications/new
# Homepage URL: http://localhost:3020
# Authorization callback URL: http://localhost:3020/api/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3020/api/github/callback

# Optional: GitHub token for repository access (CLI operations)
GITHUB_TOKEN=ghp_...

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Azure configuration for ACI backend
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=remote-claude-rg
AZURE_LOCATION=eastus

# Optional: AWS configuration for EC2/ECS backend
AWS_REGION=us-east-1
AWS_PROFILE=default

# Optional: Container registry for custom images
CONTAINER_REGISTRY=ghcr.io/l2succes
CONTAINER_IMAGE_TAG=latest
