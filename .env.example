# Remote Claude Environment Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-...

# Optional: GitHub token for repository access
GITHUB_TOKEN=ghp_...

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Azure configuration for ACI backend
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=remote-claude-rg
AZURE_LOCATION=eastus

# Optional: AWS configuration for EC2/ECS backend
AWS_REGION=us-east-1
AWS_PROFILE=default

# Optional: Container registry for custom images
CONTAINER_REGISTRY=ghcr.io/l2succes
CONTAINER_IMAGE_TAG=latest
